<form action="/figures" method="post">
  <p><label>Name:</label> <input type="text" name="figure[name]" id="figure_name"></p>
  <p><label>Title:</label></p>
  <p>
    <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= "title_#{title.id}" %>"><%= title.name %></input>
    <% end %>
  </p>
  <p>Or a new Title:</p>
    <label>Title:</label> <input type="text" name="title[name]" id="new_title"></input>
  <p><label>Landmark:</label></p>
  <p>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= "landmark_#{landmark.id}" %>"><%= landmark.name %></input>
    <% end %>
  </p>
  <p>Or a new Landmark:</p>
    <label>Landmark:</label> <input type="text" name="landmark[name]" id="new_landmark"></input>
  <p><input type="submit" value="Create New Figure"></p>
</form>
